<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.EmpMapper">
	<!-- id는 mapper에 있는 메소드 이름과 동일, return 타입은 VO 클래스 -->
	<select id="selectEmp" resultType="com.example.demo.vo.EmpVO">
		SELECT * FROM emp
	</select>
	
	<select id="selectDept" resultType="com.example.demo.vo.DeptVO">
		<!-- 테이블명 소문자 쿼리는 대문자 | * 아스테리크스 -->
		SELECT * FROM dept 
	</select>
	
	<!-- insert updste delete는 returnType이 int: sql상에서 DML은 실행 시 해당 명령어들의 실행횟수가 리턴됨 -->
	<!-- VALUES (#{empno}) 에서 empno는 EmpVO의 private 변수명인 empno -->
	
	<!-- emp table 데이터 추가 & 삭제 -->
	<insert id="insertEmp">
		INSERT INTO emp
		(
			empno,
			ename,
			job,
			sal
		)
		VALUES
		(
			#{empno},
			#{ename},
			#{job},
			#{sal}
		)
	</insert>
	
	<delete id="deleteEmp">
		DELETE FROM emp	
		WHERE empno = #{empno}
	</delete>
	
	
	<!-- dept table 데이터 추가 & 삭제 -->
	<insert id="insertDept">
		INSERT INTO dept
		(
			deptno,
			dname,
			loc
		)
		VALUES
		(
			#{deptno},
			#{dname},
			#{loc}
		)
	</insert>
	
	<delete id="deleteDept">
		DELETE FROM dept	
		WHERE deptno = #{deptno}
	</delete>
	
	
	<!-- 1. 쿼리생성 | 2. mapper | 3. service(아직 안함) | 4. controller -->
	<update id="updateEmp">
		UPDATE emp
		SET
			sal = #{sal},
			job = #{job}
		WHERE empno = #{empno}
	</update>
	
	
	<insert id="insertUsers">
		INSERT INTO users
		(
			id,
			pw,
			name
		)
		VALUES
		(
			#{id},
			#{pw},
			#{name}
		)
	</insert>
	
	<!-- count는 int형으로 리턴 -->
	<!-- mybatis -->
	<select id="selectUsersFindById" resultType="integer">
		SELECT 
			COUNT(*) 
		FROM users 
		WHERE id = #{id}
		<!-- pw == null이면 실행 안되는 코드 -->
		<if test="pw != null">
			AND pw = #{pw}
		</if>
	</select>
	
	
	<select id="selectUser" resultType="com.example.demo.vo.UsersVO">
		<!-- 테이블명 소문자 쿼리는 대문자 | * 아스테리크스 -->
		SELECT * FROM users 
	</select>
	
	
	
	
	
</mapper>